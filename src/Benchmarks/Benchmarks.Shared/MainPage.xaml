<Page
    x:Class="Benchmarks.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Benchmarks.Shared.Controls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Green">

    <StackPanel Background="Transparent" Margin="1, 1, 0, 0">
        <StackPanel Orientation="Horizontal" Margin="15, 15, 0, 0" Spacing="15">
            <RadioButton Content="BenchmarkDotNet"
                         GroupName="BenchmarkType"
                         Checked="HandleCheck" />

            <RadioButton Content="Async UI Benchmarks"
                         GroupName="BenchmarkType"
                         Checked="HandleCheck" />
        </StackPanel>

        <ContentControl x:Name="BenchmarkControl" />
    </StackPanel>
</Page>
